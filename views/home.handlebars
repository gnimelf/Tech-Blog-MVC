{{! Preset posts on screen }}
{{#each posts as |post|}}
    <div class="card col-md-10 offset-md-1 my-3">
        <div class="card-body py-0 px-0">
            <div class="card-header d-flex justify-content-between ">
                <h5 class="card-title">{{post.title}}</h5>
                <h6 class="card-subtitle text-muted">Posted by
                    {{user.user_name}}
                    on
                    {{post.date}}</h6>
            </div>

            <p class="card-text px-3">{{post.description}}</p>
        </div>
    </div>
{{/each}}
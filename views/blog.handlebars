<div class="card col-md-10 offset-md-1 my-3">
    <div class="card-body py-0 px-0">
        <div class="card-header d-flex justify-content-between">
            <h5 class="card-title">{{post.title}}</h5>
            <h6 class="card-subtitle">Posted by
                {{post.user.user_name}}
                on
                {{post.date}}</h6>
        </div>
        <div class='mx-3'>
            <p>{{post.description}}</p>
        </div>

    </div>
</div>

{{#if logged_in}}
<div>
    <form class="addblog-form row g-2 justify-content-center">
        <label for="comment">Comment</label>
    </form>
</div>
{{/if}}

{{#each post.comments as |comments|}}
    <div class="card col-md-10 offset-md-1 my-3">
        <div class="card-body py-0 px-0">
            <div class="card-header d-flex justify-content-between">
                <div class="card-body py-0 px-0">
                    <p class="card-text px-3">{{comments.description}}
                        by
                        {{user.user_name}}</p>
                </div>
            </div>
        </div>
    </div>
{{/each}}
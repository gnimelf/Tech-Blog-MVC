<div class="d-flex flex-column">
    {{#each posts}}
    <div class="card blog-post col-md-10 offset-md-1 my-3">
        <div class="card-body mx-3 my-1">
            <a href="/dashboard/{{id}}">{{title}}</a>
        </div>
    </div>
    {{/each}}
    <button id="add-post" type="button" class="btn btn-primary align-self-center col-2">Add Post</button>
</div>
<script src="./js/dashboard.js"></script>